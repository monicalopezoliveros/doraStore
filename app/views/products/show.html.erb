<h1><%= @product.name %></h1>

<div class="product-details">
  <% if @product.image.attached? %>
    <%= image_tag @product.image, alt: @product.name, class: "product-detail-image" %>
  <% end %>
  <p><strong>Description:</strong> <%= @product.description %></p>
  <p><strong>Metal:</strong> <%= @product.metal %></p>
  <p><strong>Price:</strong> $<%= @product.price %></p>
  <p><strong>Category:</strong> <%= @product.category.name %></p>
  <p><strong>state:</strong> <%= @product.status_flag %></p>
</div>

<%= link_to "Back to the list", products_path, class: "btn btn-secondary" %>
