

<div class="container">
  <div class="columns is-vcentered">
    <div class="column is-one-third">
      <!-- Product image -->
      <% if @product.image.attached? %>
        <figure class="image is-square">
          <%= image_tag @product.image, alt: @product.name, class: "product-detail-image" %>
        </figure>
      <% end %>
    </div>

    <div class="column">
      <!-- Product Description -->
      <div class="content">
        <h1 class="title is-4 has-text-grey"><%= @product.name %></h1>
        <p><strong class="has-text-grey">Description:</strong> <%= @product.description %></p>
        <p><strong class="has-text-grey">Metal:</strong> <%= @product.metal %></p>
        <p class="has-text-success"><strong class="has-text-grey">Price:</strong> $<%= '%.2f' % @product.price %></p>
        <p><strong class="has-text-grey">Category:</strong> <%= @product.category.name %></p>
        <p class="has-text-warning"> <%= @product.status_flag %></p>
      </div>
      <button class="button is-black is-fullwidth">ADD TO BAG</button>
      <!-- Button to return to the product list -->
      <%= link_to "Back to the list", products_path, class: "button is-light" %>
    </div>
  </div>
</div>
